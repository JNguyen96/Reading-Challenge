extends layout
block content

	style.
		ul {
			list-style-type: none;
			margin: 0;
			padding: 0;
			float: right;
		}
		li {
			display: inline;
			padding: 5px;
		}

	ul
		li
			button#btnHome Home
		li
			button#btnLogout Logout

	h1 <span id='fullName'></span>


	// PROFILE WRAPPER
	#profileWrapper

		<span id="currId" rel="#{id}"></span>

		// USER INFO
		#userInfo
			p
				strong Username:
				|  <span id='username'></span>
				br
				strong Email:
				|  <span id='userEmail'></span>
				br
				strong Year:
				|  <span id='userYear'></span>
				br
				strong Gender:
				|  <span id='userGender'></span>
		// /USER INFO

		// BOOK TABLE
		h2 <span id='numBooks'></span>
		#bookTable
			table
				thead
					th Title
					th Author
				tbody
		// / BOOK TABLE

		// ADD BOOK
		h4 Add a new book!
		#addBook
			form(action='/profile',method='post')
				p
					label 
						| Title 
						input#bkTitle(type='text',name='user[name]',placeholder='Title',required)
				p
					label 
						| Author 
						input#bkAuthor(type='text',name='user[name]',placeholder='Author',required)
			button#btnAddBook Add Book!

	// /PROFILE WRAPPER